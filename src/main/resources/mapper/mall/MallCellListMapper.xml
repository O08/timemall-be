<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.norm.timemall.app.mall.mapper.CellListMapper">
    <sql id="tableName">
        cell_list
    </sql>

    <sql id="baseColumn">
        id,brand_id,title,create_at,modified_at
    </sql>
    <resultMap id="cellsResultMap" type="com.norm.timemall.app.mall.domain.ro.MallCellRO">
        <id property="id" column="id"></id>
        <result property="title" column="title"></result>
        <result property="price" column="price"></result>
        <result property="sbu" column="sbu"></result>
        <result property="preview" column="preview"></result>
    </resultMap>

    <!--    嵌套查询-->
    <resultMap id="cellListResultMap" type="com.norm.timemall.app.mall.domain.ro.CellListRO">
        <id property="celllistID" column="celllistID"/>
        <result property="title" column="celllistTitle"/>
        <collection property="cells" ofType="com.norm.timemall.app.mall.domain.ro.MallCellRO" javaType="ArrayList" resultMap="cellsResultMap"/>
    </resultMap>
    <resultMap id="cellListInfoResultMap" type="com.norm.timemall.app.mall.domain.pojo.CellListInfo">
        <result property="brand" column="brand"/>
        <result property="avator" column="avator"/>
        <result property="cover" column="cover"/>
        <collection property="celllist" ofType="com.norm.timemall.app.mall.domain.ro.CellListRO" javaType="ArrayList" resultMap="cellListResultMap"/>
    </resultMap>
    <select id="selectCellListByBrandId" resultMap="cellListInfoResultMap">
        select l.id celllistID,l.title celllistTitle,b.brand_name brand,b.avator,c.title,p.price,c.id,p.sbu,b.cover,c.cover preview
        from brand b
        left join cell_list l on l.brand_id = b.id
        left join cell_list_item i on i.cell_list_id = l.id
        left join cell c on c.id = i.cell_id
        left join pricing p on p.cell_id = c.id and p.sbu ='day'
        where b.id = #{brandId}

    </select>


</mapper>